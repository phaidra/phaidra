{
    "hypnotoad": {
        "listen": [
            "http://*:3000"
        ],
        "proxy": 1,
        "inactivity_timeout": 0,
        "heartbeat_timeout": 600,
        "workers": 16,
        "pid_file": "/tmp/hypnotoad.pid"
    },
    "mode": "production",
    "scheme": "__OUTSIDE_HTTP_SCHEME__",
    "baseurl": "__PHAIDRA_HOSTNAME____PHAIDRA_PORTSTUB____PHAIDRA_HOSTPORT__",
    "basepath": "api",
    "secret": "__PHAIDRA_SECRET__",
    "enc_key": "__PHAIDRA_ENCRYPTION_KEY__",
    "session_expiration": "7200",
    "session_ip_match": 0,
    "inactivity_timeout": "7200",
    "readonly": "0",
    "allow_userdata_queries": "1",
    "validate_jsonld": "/usr/local/phaidra/phaidra-api/public/json-schema/jsonld.json",
    "validate_uwmetadata": "/usr/local/phaidra/phaidra-api/public/xsd/uwmetadata/ns0.xsd",
    "validate_mods": "/usr/local/phaidra/phaidra-api/public/xsd/mods/mods-3-5.xsd",
    "validate_rights": "/usr/local/phaidra/phaidra-api/public/xsd/rights/rights.xsd",
    "validate_geo": "/usr/local/phaidra/phaidra-api/public/xsd/geo/ogckml22.xsd",
    "validate_annotations": "/usr/local/phaidra/phaidra-api/public/xsd/annotations/annotations.xsd",
    "local_uwmetadata_tree": "PhaidraAPI::Model::Uwmetadata::Tree",
    "local_mods_tree": "/usr/local/phaidra/phaidra-api/public/mods/mods.json",
    "licenses_file": "/usr/local/phaidra/phaidra-api/public/licenses/licenses.json",
    "languages_file": "/usr/local/phaidra/phaidra-api/public/languages/languages.json",
    "vocabulary_folder": "/usr/local/phaidra/phaidra-api/public/vocabulary",
    "dcaffiliationcodes": 1,
    "terms": {
        "search_results_limit": 50
    },
    "directory": {
        "connect_string": "dbi:Oracle:DB",
        "username": "username",
        "password": "password",
        "org_units_languages": [
            "en",
            "de",
            "it"
        ],
        "study_plans_languages": [
            "de"
        ]
    },
    "phaidra": {
        "baseurl": "__PHAIDRA_HOSTNAME____PHAIDRA_PORTSTUB____PHAIDRA_HOSTPORT__",
        "fedorabaseurl": "__FEDORA_HOST__",
        "staticbaseurl": "",
        "fedorastylesheeturl": "",
        "proaiRepositoryIdentifier": "",
        "defaultlabel": "Created by phaidra-api",
        "intcallusername": "__FEDORA_ADMIN_USER__",
        "intcallpassword": "__FEDORA_ADMIN_PASS__",
        "adminusername": "__PHAIDRA_ADMIN_USER__",
        "adminpassword": "__PHAIDRA_ADMIN_PASSWORD__",
        "nolegacyds": 1
    },
    "fedora": {
        "version": "6.4",
        "host": "__FEDORA_HOST__",
        "port": "8080",
        "path": "fcrepo/rest/",
        "scheme": "http",
        "ocflroot": "__FEDORA_OCFL_ROOT__",
        "adminuser": "__FEDORA_ADMIN_USER__",
        "adminpass": "__FEDORA_ADMIN_PASS__",
        "pidnamespace": "o",
        "fedoraadmins": []
    },
    "imageserver": {
        "hash_secret": "__IMAGESERVER_HASH_SECRET__",
        "image_server_root": "__IMAGESERVER_ROOT_PATH__",
        "scheme": "http",
        "host": "__IMAGESERVER_HOST__",
        "path": "/iipsrv/iipsrv.fcgi"
    },
    "mongodb_group_manager": {
        "host": "__MONGODB_PHAIDRA_HOST__",
        "port": "27017",
        "username": "__MONGODB_PHAIDRA_USER__",
        "password": "__MONGODB_PHAIDRA_PASSWORD__",
        "database": "groups",
        "collection": "usergroups"
    },
    "mongodb": {
        "host": "__MONGODB_PHAIDRA_HOST__",
        "port": "27017",
        "username": "__MONGODB_PHAIDRA_USER__",
        "password": "__MONGODB_PHAIDRA_PASSWORD__",
        "database": "mongodb"
    },
    "paf_mongodb": {
        "host": "__MONGODB_PHAIDRA_HOST__",
        "port": "27017",
        "username": "__MONGODB_PHAIDRA_USER__",
        "password": "__MONGODB_PHAIDRA_PASSWORD__",
        "database": "paf_mongodb"
    },
    "index_mongodb": {
        "host": "__MONGODB_PHAIDRA_HOST__",
        "port": "27017",
        "username": "__MONGODB_PHAIDRA_USER__",
        "password": "__MONGODB_PHAIDRA_PASSWORD__",
        "database": "index_mongodb"
    },
    "apis": {
        "geonames": {
            "url": "https://secure.geonames.org/getJSON",
            "search": "https://secure.geonames.org/searchJSON",
            "username": "phaidra",
            "maxRows": 50
        },
        "lobid": {
            "baseurl": "lobid.org"
        }
    },
    "oai": {
        "oairepositoryidentifier": "__PHAIDRA_HOSTNAME__",
        "repositoryname": "__PHAIDRA_HOSTNAME__",
        "dataprovider": "__PHAIDRA_HOSTNAME__",
        "pagesize": 500
    },
    "hooks": {
        "updatedc": 0,
        "updateindex": 1
    },
    "authorization": {
        "canmodifyownerid": [
            "username1"
        ]
    },
    "upstream": {
        "enabled": 1,
        "principalheader": "this is the principal header as in fedora UpstreamAuth config",
        "affiliationheader": "this is the affiliation attribute as in fedora UpstreamAuth config",
        "upstreamusername": "if someone is calling api with principial header, he has to use this credentials",
        "upstreampassword": "secret"
    },
    "directory_class": "Phaidra::Directory::Default",
    "phaidra_db": {
        "dsn": "dbi:mysql:phaidradb:__MARIADB_PHAIDRA_HOST__",
        "username": "__MARIADB_PHAIDRA_USER__",
        "password": "__MARIADB_PHAIDRA_PASSWORD__"
    },
    "phaidra_user_db": {
        "dsn": "dbi:mysql:phaidradb:__MARIADB_PHAIDRA_HOST__",
        "username": "__MARIADB_PHAIDRA_USER__",
        "password": "__MARIADB_PHAIDRA_PASSWORD__"
    },
    "authentication": {
        "realm": "Phaidra",
        "token_header": "X-XSRF-TOKEN",
        "token_cookie": "XSRF-TOKEN",
        "cookie_domain": "__PHAIDRA_HOSTNAME____PHAIDRA_PORTSTUB____PHAIDRA_HOSTPORT__",
        "Access-Control-Allow-Origin": "*",
        "shibboleth": {
            "frontendloginurl": "__OUTSIDE_HTTP_SCHEME__://__PHAIDRA_HOSTNAME____PHAIDRA_PORTSTUB____PHAIDRA_HOSTPORT__/",
            "frontendconsenturl": "__OUTSIDE_HTTP_SCHEME__://__PHAIDRA_HOSTNAME____PHAIDRA_PORTSTUB____PHAIDRA_HOSTPORT__/ssoconsent",
            "attributes": {
                "email": "__SHIB_MAIL__",
                "firstname": "__SHIB_GIVEN_NAME__",
                "lastname": "__SHIB_SURNAME__",
                "username": "__SHIB_USERNAME__",
                "affiliation": "__SHIB_AFFILIATION__"
            },
            "requiredaffiliations": [
                "__SHIB_REQUIRED_AFFILIATIONS__"
            ]
        },
        "ldap": {
            "server": "__OPENLDAP_HOST__",
            "port": "1389",
            "groupssearchbase": "ou=groups,__LDAP_ROOT__",
            "usersearchbase": [
                "ou=people,__LDAP_ROOT__"
            ],
            "usersearchfilter": "(&(uid={0})(objectClass=inetOrgPerson))",
            "useridattribute": "uid",
            "userattributes": "cn",
            "securityprincipal": "cn=__LDAP_ADMIN_USERNAME__,__LDAP_ROOT__",
            "securitycredentials": "__LDAP_ADMIN_PASSWORD__"
        }
    },
    "solr": {
        "scheme": "http",
        "host": "__SOLR_HOST__",
        "path": "",
        "core": "phaidra",
        "port": "8983",
        "username": "__SOLR_USER__",
        "password": "__SOLR_PASS__"
    },
    "external_services": {
        "opencast": {
            "mode": "__OC_EXTERNAL__"
        }
    }
}

